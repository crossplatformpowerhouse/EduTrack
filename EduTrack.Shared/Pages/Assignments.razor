
@page "/assignments"
@using EduTrack.Shared.Modules
@using EduTrack.Shared.Services
@inject IEduTrackService EduTrackService
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<h3 class="text-2xl font-bold mb-4">Assignments</h3>

@if (errorMessage != null)
{
    <p class="text-red-500">@errorMessage</p>
}
else if (assignments == null)
{
    <p>Loading...</p>
}
else
{
    <table class="min-w-full bg-white border border-gray-300">
        <thead>
            <tr class="bg-gray-100">
                <th class="py-2 px-4 border-b">ID</th>
                <th class="py-2 px-4 border-b">User ID</th>
                <th class="py-2 px-4 border-b">Subject ID</th>
                <th class="py-2 px-4 border-b">Assignment Type ID</th>
                <th class="py-2 px-4 border-b">Exam Type ID</th>
                <th class="py-2 px-4 border-b">Title</th>
                <th class="py-2 px-4 border-b">Semester</th>
                <th class="py-2 px-4 border-b">Created Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in assignments)
            {
                <tr class="hover:bg-gray-50">
                    <td class="py-2 px-4 border-b">@assignment.Id</td>
                    <td class="py-2 px-4 border-b">@assignment.UserId</td>
                    <td class="py-2 px-4 border-b">@assignment.SubjectId</td>
                    <td class="py-2 px-4 border-b">@assignment.AssignmentTypeId</td>
                    <td class="py-2 px-4 border-b">@assignment.ExamTypeId</td>
                    <td class="py-2 px-4 border-b">@assignment.Title</td>
                    <td class="py-2 px-4 border-b">@assignment.Semester</td>
                    <td class="py-2 px-4 border-b">@assignment.CreatedDate</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<Assignment>? assignments;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            assignments = await EduTrackService.GetAssignmentsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading assignments: {ex.Message}";
        }
    }
}

