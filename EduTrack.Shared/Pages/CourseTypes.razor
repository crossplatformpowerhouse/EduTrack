
@page "/coursetypes"
@using EduTrack.Shared.Modules
@using EduTrack.Shared.Services
@inject IEduTrackService EduTrackService
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<h3 class="text-2xl font-bold mb-4">Course Types</h3>

@if (errorMessage != null)
{
    <p class="text-red-500">@errorMessage</p>
}
else if (courseTypes == null)
{
    <p>Loading...</p>
}
else
{
    <table class="min-w-full bg-white border border-gray-300">
        <thead>
            <tr class="bg-gray-100">
                <th class="py-2 px-4 border-b">ID</th>
                <th class="py-2 px-4 border-b">Name</th>
                <th class="py-2 px-4 border-b">Created Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var courseType in courseTypes)
            {
                <tr class="hover:bg-gray-50">
                    <td class="py-2 px-4 border-b">@courseType.Id</td>
                    <td class="py-2 px-4 border-b">@courseType.Name</td>
                    <td class="py-2 px-4 border-b">@courseType.CreatedDate</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<CourseType>? courseTypes;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            courseTypes = await EduTrackService.GetCourseTypesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading course types: {ex.Message}";
        }
    }
}
