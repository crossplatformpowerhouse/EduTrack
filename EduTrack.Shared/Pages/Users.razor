@page "/users"
@using EduTrack.Shared.Models
@using EduTrack.Shared.Services
@inject IEduTrackService EduTrackService

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<h3 class="text-2xl font-bold mb-4">Users</h3>

@if (errorMessage != null)
{
    <p class="text-red-500">@errorMessage</p>
}
else if (users == null)
{
    <p>Loading...</p>
}
else
{
    <table class="min-w-full bg-white border border-gray-300 text-sm">
        <thead>
            <tr class="bg-gray-100">
                <th class="py-2 px-4 border-b text-left">ID</th>
                <th class="py-2 px-4 border-b text-left">Username</th>
                <th class="py-2 px-4 border-b text-left">First Name</th>
                <th class="py-2 px-4 border-b text-left">Last Name</th>
                <th class="py-2 px-4 border-b text-left">Email</th>
                <th class="py-2 px-4 border-b text-left">Cellphone</th>
                <th class="py-2 px-4 border-b text-left">User Type</th>
                <th class="py-2 px-4 border-b text-left">School</th>
                <th class="py-2 px-4 border-b text-left">Course</th>
                <th class="py-2 px-4 border-b text-left">Theme</th>
                <th class="py-2 px-4 border-b text-left">Last Login</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr class="hover:bg-gray-50">
                    <td class="py-2 px-4 border-b">@user.Id</td>
                    <td class="py-2 px-4 border-b">@user.Username</td>
                    <td class="py-2 px-4 border-b">@user.FirstName</td>
                    <td class="py-2 px-4 border-b">@user.LastName</td>
                    <td class="py-2 px-4 border-b">@user.Email</td>
                    <td class="py-2 px-4 border-b">@user.Cellphone</td>
                    <td class="py-2 px-4 border-b">@GetUserType(user.UserTypeId)</td>
                    <td class="py-2 px-4 border-b">@GetSchool(user.SchoolId)</td>
                    <td class="py-2 px-4 border-b">@GetCourse(user.CourseId)</td>
                    <td class="py-2 px-4 border-b">@user.ThemePreference</td>
                    <td class="py-2 px-4 border-b">@user.LastLogin?.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<User>? users;
    private IEnumerable<UserType>? userTypes;
    private IEnumerable<School>? schools;
    private IEnumerable<Course>? courses;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var userTask = EduTrackService.GetUsersAsync();
            var userTypeTask = EduTrackService.GetUserTypesAsync();
            var schoolTask = EduTrackService.GetSchoolsAsync();
            var courseTask = EduTrackService.GetCoursesAsync();

            await Task.WhenAll(userTask, userTypeTask, schoolTask, courseTask);

            users = userTask.Result;
            userTypes = userTypeTask.Result;
            schools = schoolTask.Result;
            courses = courseTask.Result;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading users: {ex.Message}";
        }
    }

    private string GetUserType(int id) =>
        userTypes?.FirstOrDefault(t => t.Id == id)?.Description ?? "Unknown";

    private string GetSchool(int id) =>
        schools?.FirstOrDefault(s => s.Id == id)?.Description ?? "Unknown";

    private string GetCourse(int id) =>
        courses?.FirstOrDefault(c => c.Id == id)?.Description ?? "Unknown";
}
